<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_xxs">

    <TextView
        android:id="@+id/memeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        android:textStyle="bold"
        android:background="@color/black"
        android:elevation="4dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/memeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/memeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_overlay"
        android:paddingStart="@dimen/spacing_xs"
        android:paddingTop="@dimen/spacing_xs"
        android:paddingEnd="@dimen/spacing_s"
        android:paddingBottom="@dimen/spacing_xs"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/memeImage"
        tools:text="Title" />

    <ImageView
        android:id="@+id/memeUsernameImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_circle_avatar"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_xxs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memeImage"
        tools:src="@tools:sample/avatars[1]" />

    <TextView
        android:id="@+id/memeUsername"
        android:layout_width="@dimen/no_spacing"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxs"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/eggplant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memeUsernameImage"
        app:layout_constraintTop_toTopOf="@+id/memeUsernameImage"
        app:layout_constraintBottom_toBottomOf="@+id/memeUsernameImage"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="username" />

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="@dimen/no_spacing"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_12"
        android:layout_marginTop="@dimen/spacing_xxs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memeImage"
        tools:text="20/11/2022" />

</androidx.constraintlayout.widget.ConstraintLayout>